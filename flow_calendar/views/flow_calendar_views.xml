<odoo>
    <data>    
        <record id="view_flow_calendar_event_form" model="ir.ui.view">
            <field name="name">flow_calendar.calendar.event.form</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form" />
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="flow_calendar_model" invisible="1" />
                </field>
            </field>
        </record>

        <record id="view_flow_calendar_event_form_popup" model="ir.ui.view">
            <field name="name">flow_calendar.calendar.event.form</field>
            <field name="model">calendar.event</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_form_popup" />
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="flow_calendar_model" invisible="1" />
                </field>
            </field>
        </record>
    </data>
</odoo>
