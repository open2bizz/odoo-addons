<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- layout striped -->
  <template id="external_layout_striped_banks" inherit_id="web.external_layout_striped">
    <xpath expr="//div/div/ul" position="inside">
        <t t-foreach="company.bank_journal_ids" t-as="ba" id="bank_account" >
          <t t-if="ba.add_to_footer">
            <span>IBAN: </span>
            <span t-field="ba.bank_account_id.acc_number" />
            <span> | </span>
            <span t-field="ba.bank_id.name" />
            <span> | BIC: </span>
            <span t-field="ba.bank_id.bic" />
          </t>
        </t>
    </xpath>
  </template>
  <!-- layout boxed -->
  <template id="external_layout_boxed_banks" inherit_id="web.external_layout_boxed">
    <xpath expr="//div[@class='text-center'][1]/div[1]" position="after">
        <t t-foreach="company.bank_journal_ids" t-as="ba" id="bank_account" >
          <t t-if="ba.add_to_footer">
            <span>IBAN: </span>
            <span t-field="ba.bank_account_id.acc_number" />
            <span> | </span>
            <span t-field="ba.bank_id.name" />
            <span> | BIC: </span>
            <span t-field="ba.bank_id.bic" />
          </t>
        </t>
    </xpath>
  </template>

  <!-- layout external_layout_bold -->
  <template id="external_layout_clean_banks" inherit_id="web.external_layout_bold">
    <xpath expr="//div[@class='col-4'][2]" position="after">
      <div class="col-4">
        <t t-foreach="company.bank_journal_ids" t-as="ba" id="bank_account">
          <t t-if="ba.add_to_footer">
            <span>IBAN: </span><span t-field="ba.bank_account_id.acc_number"/><br/>
            <span t-field="ba.bank_id.name"/><span> BIC: </span><span t-field="ba.bank_id.bic"/>
          </t>
        </t>
      </div>
    </xpath>
  </template>

