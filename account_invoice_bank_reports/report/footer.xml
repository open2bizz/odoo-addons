<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- layout background -->
  <template id="external_layout_background_banks" inherit_id="web.external_layout_background">
    <xpath expr="//div/div/ul" position="inside">
      
        <ul id="bank_account" t-foreach="company.bank_journal_ids" t-as="ba" class="list-inline">
          <li t-if="ba.add_to_footer" class="list-inline-item">
            IBAN No.:
            <span t-field="ba.bank_account_id.acc_number" />
          </li>
          <li t-if="ba.add_to_footer" class="list-inline-item">
            Bank:
            <span t-field="ba.bank_id.name" />
          </li>
          <li t-if="ba.add_to_footer" class="list-inline-item">
            BIC No.:
            <span t-field="ba.bank_id.bic" />
          </li>
        </ul>
    </xpath>
  </template>

